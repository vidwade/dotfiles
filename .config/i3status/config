general {
        output_format = "i3bar"
        colors = true
        interval = 5
        color_good = "#8C9440"
        color_bad = "#A54242"
        color_degraded = "#DE935F"
}

order += "wireless _first_"
order += "ethernet _first_"
order += "volume master"
order += "battery all"
order += "cpu_usage"
order += "memory"
order += "tztime local"

wireless _first_ {
        format_up = "W: (%quality at %essid, %bitrate)"
        format_down = "W: down"
}

ethernet _first_ {
        format_up = "E: %ip"
        format_down = "E: down"
}

